@model ShaulisBlog.Models.Post

@using System.Globalization

@{
    ViewBag.Title = "Manage Comments";
}

<h2>Manage Comments</h2>

<!-- Comments section -->
<section id="comments">
    <h3>Comments</h3>
    <!-- Display each comment in DB which related to this post -->
    @foreach (var comment in Model.Comments)
    {
        <article>
            <header>
                <a href="@comment.WriterWebSite">@comment.Writer</a>
            </header>
            <p> @comment.Content </p>
            <!-- Form which handles this comment deletion -->
            @using (Html.BeginForm("DeleteComment", "Blog", new { id = comment.CommentID }, FormMethod.Post)) { 
                @Html.AntiForgeryToken()
                <p>
                    <input type="submit" value="Delete Comment" />
                </p>
            }
        </article>
    }
</section>

<p> </p>
<p>
    @Html.ActionLink("Back to Admin View", "Admin")
</p>