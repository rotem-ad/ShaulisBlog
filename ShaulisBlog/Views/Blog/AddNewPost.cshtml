@model ShaulisBlog.Models.Post

@Styles.Render("~/Blog/css")

@{
    ViewBag.Title = "Add New Post";
}

<h2>Add New Post</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Post</legend>

        <!-- Send a default PublishDate to controller -->
        @Html.HiddenFor(model => model.PublishDate)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Author)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Author)
            @Html.ValidationMessageFor(model => model.Author)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AuthorWebSite, "Author Web Site")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AuthorWebSite)
            @Html.ValidationMessageFor(model => model.AuthorWebSite)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Content)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <p>
            <input type="submit" value="Add Post" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Admin View", "Admin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
