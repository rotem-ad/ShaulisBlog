@{ /*
   * We use here ViewBag.commentList from parent view (ManageComments).
   * ViewBag.commentList will be updated by FilterComments method, after filtering comments by user.
   */} 

<!-- Comments section -->
<section id="comments">
    <h3>Comments</h3>
    <!-- Display each comment in DB which related to this post -->
    @foreach (var comment in ViewBag.commentList)
    {
        <article>
            <header>
                <a href="@comment.WriterWebSite">@comment.Writer</a>
            </header>
            <p> @comment.Content </p>
            <!-- Form which handles this comment deletion -->
            @using (Html.BeginForm("DeleteComment", "Blog", new { id = comment.CommentID }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <p>
                    <input type="submit" value="Delete Comment" />
                </p>
            }
        </article>
    }
</section>